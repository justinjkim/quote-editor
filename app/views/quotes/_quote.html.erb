<%= turbo_frame_tag(quote) do %>
  <div class="quote">
    <%= link_to quote.name,
                quote_path(quote),
                data: { turbo_frame: "_top" }
        # The reason we need to utilize the data_turbo_frame attribute
        # is that each quote is nested under an already existing
        # turbo_frame_tag, so this data_turbo_frame helps us to target
        # a different page.
    %>
    <div class="quote__actions">
      <%= button_to "Delete",
                    quote_path(quote),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_quote_path(quote),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>